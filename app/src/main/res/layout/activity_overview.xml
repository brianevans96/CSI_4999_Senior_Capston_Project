<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVESTO"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:padding="20dp">

        </TextView>

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/cardview_dark_background"
            android:paddingBottom="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:textSize="15sp">

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUDGET"
                android:textSize="15sp">

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textSize="15sp">

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONTHLY"
                android:textSize="15sp">

            </Button>

        </Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OVERVIEW"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp">

            </TextView>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/piechart"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TODAYS TRANSACTIONS:"
                android:textSize="25sp"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. TRANSACTION - $10.00">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. TRANSACTION - $10.00">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. TRANSACTION - $10.00">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DUE THIS MONTH:"
                android:textSize="25sp"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1/11/2023">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CAR PAYMENT"
                android:layout_marginBottom="30dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1/18/2023">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="INSURANCE"
                android:layout_marginBottom="30dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1/28/2023">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OTHER BILL HERE"
                android:layout_marginBottom="30dp">

            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TOTAL: TOTAL AMOUNT HERE">

            </TextView>


        </LinearLayout>

        <Button
            android:id="@+id/goToUserProfileActivity"
            android:onClick="goToUserProfileActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO USER PROFILE"
            android:textSize="20sp"
            android:layout_marginTop="50dp">

        </Button>

        <Button
            android:id="@+id/goToCalendarActivity"
            android:onClick="goToCalendarActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO CALENDAR"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/goToBudgetActivity"
            android:onClick="goToBudgetActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO USER BUDGET"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/goToRecentTransActivity"
            android:onClick="goToRecentTransActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO RECENT TRANSACTION"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/goToMonthBillsActivity"
            android:onClick="goToMonthBillsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO MONTHLY BILLS"
            android:textSize="20sp">

        </Button>




    </LinearLayout>

</ScrollView>